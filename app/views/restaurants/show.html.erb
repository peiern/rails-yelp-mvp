<div class="list-group-item list-group-item-action list-group-item-secondary text-center">
  <h2><%= @restaurant.name %></h2>
  <p>Address: <%= @restaurant.address %></p>
  <p>Contact: <%= @restaurant.phone_number %></p>
  <p>Category: <%= @restaurant.category %></p>
</div>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <h5>Reviews: </h5>
    <li class="list-group-item"><%= review.content %></li>
  <% end %>
</ul>

<br><br>
<div class="container">
  <h2>Enter your comments</h2>
  <%= simple_form_for [ @restaurant, @review ] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating %>
    <%= f.submit "Submit review", class: "btn btn-outline-primary" %>
  <% end %>
<br>
  <div class="border-top pt-3">
    <span class="btn btn-outline-secondary"><i class="far fa-hand-point-left" style="margin:5px;"></i><%= link_to 'Back to Restaurants', restaurants_path %></span>
    <span class="btn btn-outline-info"><i class="fas fa-pen-nib" style="margin:5px;"></i><%= link_to 'Edit restaurant Details', edit_restaurant_path(@restaurant) %></span>
</div>
</div>
